---
// Componente Cards Acronis - Sección de IA con Microsoft 365
---

<section class="acronis-section">
  <div class="acronis-header">
    <h2 class="acronis-title">¿Que ofrecemos?</h2>
    <p class="acronis-description">Cyber Protect Cloud</p>
  </div>

  <!-- Sección de Beneficios de IA -->
  <div class="beneficios-container">
    <div class="beneficios-grid">
      <!-- Card 1: Licenciamiento -->
      <div class="beneficio-card">
        <div class="card-icon">
          <img
            src="/src/assets/images/micosoft (3).webp"
            alt="Intranet"
            width="48"
            height="48"
          />
        </div>
        <p class="beneficio-descripcion">Licenciamiento</p>
      </div>

      <!-- Card 2: Soluciones digitales -->
      <div class="beneficio-card">
        <div class="card-icon">
          <img
            src="/src/assets/images/micosoft (2).webp"
            alt="Soluciones digitales"
            width="48"
            height="48"
          />
        </div>
        <p class="beneficio-descripcion">Implementación</p>
      </div>

      <!-- Card 3:Flujos de Trabajo -->
      <div class="beneficio-card">
        <div class="card-icon">
          <img
            src="/src/assets/images/micosoft (4).webp"
            alt="Flujos de Trabajo"
            width="48"
            height="48"
          />
        </div>
        <p class="beneficio-descripcion">Soporte</p>
      </div>
    </div>
  </div>
</section>

<style>
  .acronis-section {
    background: linear-gradient(rgba(1, 7, 56, 0.9), rgba(1, 7, 56, 0.9)),
      url(/src/assets/images/Rectangle.webp);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 4rem 2rem;
    position: relative;
    max-width: 100vw;
    overflow-x: hidden;
    min-height: 70vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .acronis-header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 800px;
    position: relative;
    z-index: 2;
  }

  .acronis-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
    letter-spacing: -0.5px;
    line-height: 1.2;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .acronis-description {
    font-size: 1.25rem;
    color: white;
    font-weight: 400;
    margin: 0;
    opacity: 0.9;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  /* Estilos para la sección de Beneficios */
  .beneficios-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    width: 100%;
  }

  .beneficios-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    align-items: center;
    justify-content: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .beneficio-card {
    background: #fa4517;
    border-radius: 4px;
    padding: 2rem 1rem;
    text-align: center;
    transition: all 0.3s ease;
    height: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(250, 69, 23, 0.3);
    aspect-ratio: 1;
  }

  .beneficio-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(250, 69, 23, 0.4);
  }

  .card-icon {
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
  }

  .card-icon img {
    filter: brightness(0) invert(1);
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .beneficio-descripcion {
    font-size: 1rem;
    line-height: 1.4;
    color: white;
    font-weight: 500;
    margin: 0;
    text-align: center;
  }

  /* iPad Responsive Design */
  @media screen and (max-width: 1024px) {
    .acronis-section {
      padding: 3rem 1.5rem;
      min-height: 65vh;
    }

    .acronis-title {
      font-size: 2rem;
    }

    .acronis-description {
      font-size: 1.1rem;
    }

    .beneficios-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 15px;
      max-width: 500px;
      margin: 0 auto;
    }

    .beneficio-card {
      height: 180px;
      padding: 1.5rem 0.8rem;
    }
  }

  /* Tablet Responsive Design */
  @media screen and (max-width: 768px) {
    .acronis-section {
      padding: 2.5rem 1rem;
      min-height: 60vh;
    }

    .acronis-title {
      font-size: 1.8rem;
    }

    .acronis-description {
      font-size: 1rem;
    }

    .beneficios-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 15px;
      max-width: 500px;
      margin: 0 auto;
    }

    .beneficio-card {
      height: 160px;
      padding: 1.2rem 0.6rem;
    }
  }

  /* Móvil Responsive Design */
  @media screen and (max-width: 480px) {
    .acronis-section {
      padding: 2rem 0.8rem;
      min-height: 55vh;
    }

    .acronis-title {
      font-size: 1.5rem;
    }

    .acronis-description {
      font-size: 0.9rem;
    }

    .beneficios-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 8px;
      max-width: 300px;
      margin: 0 auto;
    }

    .beneficio-card {
      height: 120px;
      padding: 0.8rem 0.4rem;
    }

    .beneficio-descripcion {
      font-size: 0.8rem;
    }
  }

  /* Móvil pequeño */
  @media screen and (max-width: 375px) {
    .acronis-section {
      padding: 1.8rem 0.6rem;
      min-height: 50vh;
    }

    .acronis-title {
      font-size: 1.3rem;
    }

    .acronis-description {
      font-size: 0.8rem;
    }

    .beneficios-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 6px;
      max-width: 280px;
      margin: 0 auto;
    }

    .beneficio-card {
      height: 100px;
      padding: 0.6rem 0.3rem;
    }

    .beneficio-descripcion {
      font-size: 0.7rem;
    }
  }

  /* Móvil muy pequeño */
  @media screen and (max-width: 320px) {
    .acronis-section {
      padding: 1.5rem 0.5rem;
      min-height: 45vh;
    }

    .acronis-title {
      font-size: 1.2rem;
    }

    .acronis-description {
      font-size: 0.75rem;
    }

    .beneficios-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 5px;
      max-width: 250px;
      margin: 0 auto;
    }

    .beneficio-card {
      height: 90px;
      padding: 0.5rem 0.2rem;
    }

    .beneficio-descripcion {
      font-size: 0.65rem;
    }
  }
</style>
