<style>
  /* Testimonials Section Styles */
  .testimonials-section {
    background: linear-gradient(rgba(1, 7, 56, 0.9), rgba(1, 7, 56, 0.9)),
      url("/images/imagEnovel3.webp");
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    padding: 6rem 2rem;
    position: relative;
    max-width: 100vw;
    overflow-x: hidden;
  }

  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 5rem;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .testimonials-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: -1px;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .testimonials-subtitle {
    font-size: 1.1rem;
    color: #e2e8f0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    opacity: 0.9;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .testimonial-card {
    background: #ffffff;
    border-radius: 4px;
    padding: 2rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .testimonial-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
  }

  .company-logo {
    text-align: left;
    padding: 0rem 0;
  }

  .logo-image {
    max-width: 120px;
    max-height: 60px;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: grayscale(0%);
    transition: all 0.3s ease;
  }

  .testimonial-card:hover .logo-image {
    transform: scale(1.05);
  }

  .testimonial-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .testimonial-text {
    font-size: 1rem;
    color: #4a5568;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-style: italic;
    flex: 1;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    margin-top: auto;
  }

  .author-info {
    flex: 1;
  }

  .author-name {
    font-size: 1rem;
    font-weight: 600;
    color: #010738;
    margin-bottom: 0.25rem;
  }

  .author-meta {
    color: #64748b;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  /* ===== Responsive Design ===== */

  /* Large Desktop */
  @media screen and (min-width: 1400px) {
    .testimonials-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }

    .testimonials-title {
      font-size: 3rem;
    }
  }

  /* Desktop */
  @media screen and (max-width: 1399px) and (min-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  /* iPad Landscape */
  @media screen and (max-width: 1023px) and (min-width: 768px) {
    .testimonials-section {
      padding: 5rem 1.5rem;
      background-attachment: scroll;
    }

    .testimonials-container {
      padding: 0 0.5rem;
    }

    .testimonials-title {
      font-size: 2.2rem;
    }

    .testimonials-subtitle {
      font-size: 1rem;
    }

    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .testimonial-card {
      padding: 1.75rem;
    }

    .company-logo {
      margin-bottom: 1.25rem;
    }

    .logo-image {
      max-width: 100px;
      max-height: 50px;
    }

    .testimonial-text {
      font-size: 0.95rem;
    }
  }

  /* iPad Portrait & Mobile Landscape */
  @media screen and (max-width: 767px) and (min-width: 481px) {
    .testimonials-section {
      padding: 5rem 1rem 4rem 1rem;
      background-attachment: scroll;
    }

    .testimonials-title {
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .testimonials-subtitle {
      font-size: 1rem;
    }

    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
      max-width: none;
      margin: 0 auto 3rem auto;
    }

    .testimonial-card {
      padding: 1.25rem;
    }

    .company-logo {
      margin-bottom: 0.75rem;
    }

    .logo-image {
      max-width: 80px;
      max-height: 40px;
    }

    .testimonial-text {
      font-size: 0.75rem;
      line-height: 1.4;
    }

    .author-name {
      font-size: 0.8rem;
    }

    .author-meta {
      font-size: 0.7rem;
    }
  }

  /* Mobile Portrait */
  @media screen and (max-width: 480px) {
    .testimonials-section {
      padding: 4rem 0.75rem 3rem 0.75rem;
      background-attachment: scroll;
    }

    .testimonials-container {
      padding: 0;
    }

    .testimonials-header {
      margin-bottom: 3rem;
      margin-top: 1rem;
    }

    .testimonials-title {
      font-size: 1.8rem;
      margin-bottom: 0.75rem;
      line-height: 1.3;
    }

    .testimonials-subtitle {
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .testimonial-card {
      padding: 1rem;
      border-radius: 4px;
    }

    .company-logo {
      margin-bottom: 0.5rem;
      text-align: center;
    }

    .logo-image {
      max-width: 60px;
      max-height: 30px;
    }

    .testimonial-text {
      font-size: 0.7rem;
      line-height: 1.3;
      margin-bottom: 0.75rem;
    }

    .testimonial-author {
      text-align: center;
    }

    .author-name {
      font-size: 0.75rem;
    }

    .author-meta {
      font-size: 0.65rem;
    }
  }

  /* Small Mobile */
  @media screen and (max-width: 375px) {
    .testimonials-section {
      padding: 3.5rem 0.5rem 2.5rem 0.5rem;
    }

    .testimonials-title {
      font-size: 1.6rem;
    }

    .testimonials-subtitle {
      font-size: 0.9rem;
    }

    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
    }

    .testimonial-card {
      padding: 0.875rem;
    }

    .company-logo {
      margin-bottom: 0.5rem;
    }

    .logo-image {
      max-width: 50px;
      max-height: 25px;
    }

    .testimonial-text {
      font-size: 0.65rem;
      line-height: 1.2;
      margin-bottom: 0.5rem;
    }

    .author-name {
      font-size: 0.7rem;
    }

    .author-meta {
      font-size: 0.6rem;
    }
  }

  /* Extra Small Mobile */
  @media screen and (max-width: 320px) {
    .testimonials-section {
      padding: 3rem 0.25rem 2rem 0.25rem;
    }

    .testimonials-title {
      font-size: 1.5rem;
    }

    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.5rem;
    }

    .testimonial-card {
      padding: 0.75rem;
    }

    .company-logo {
      margin-bottom: 0.5rem;
    }

    .logo-image {
      max-width: 45px;
      max-height: 22px;
    }

    .testimonial-text {
      font-size: 0.6rem;
      line-height: 1.1;
      margin-bottom: 0.5rem;
    }

    .author-name {
      font-size: 0.65rem;
    }

    .author-meta {
      font-size: 0.55rem;
    }
  }
</style>
