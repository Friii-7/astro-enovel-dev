---
// Componente de navegación
const currentPath = Astro.url.pathname;
---

<nav class="navbar">
    <div class="nav-container">
        <!-- Logo -->
        <div class="nav-logo">
            <a href="/" title="Enovel - Transformación Digital con IA y Microsoft 365" data-page="home">
                <img src="/images/02-logo-enovel-15.png" alt="Enovel Logo" class="logo-image">
            </a>
        </div>

        <!-- Desktop Navigation Links -->
        <div class="nav-menu">
            <a href="/ia" class="btn-ch btn-chatgpt nav-btn">Al enovel</a>
            <a href="/nosotros" class="nav-link" data-page="nosotros">Nosotros</a>
            <a href="/sharepoint" class="nav-link" data-page="sharepoint">Sharepoint</a>
            <a href="/microsoft365" class="nav-link" data-page="microsoft365">Microsoft 365</a>
            <a href="#acronis" class="nav-link">Acronis</a>
            <a href="#testimonios" class="nav-link">Testimonios</a>
        </div>

        <!-- Desktop Buttons -->
        <div class="nav-buttons">
            <button class="btn btn-primary">Contactenos</button>
            <button class="btn btn-outline">Soporte</button>
        </div>

        <!-- Mobile Menu Button -->
        <div class="nav-toggle" id="mobile-menu">
            <div class="hamburger">
                <span class="line"></span>
                <span class="line"></span>
                <span class="line"></span>
            </div>
        </div>
    </div>

            <!-- Mobile Menu -->
        <div class="mobile-menu" id="mobile-menu-content">
            <div class="mobile-menu-links">
                <a href="/ia" class="btn btn-chatgpt btn-mobile nav-btn-mobile">Al enovel</a>
                <a href="/nosotros" class="mobile-nav-link" data-page="nosotros">Nosotros</a>
                <a href="/sharepoint" class="mobile-nav-link" data-page="sharepoint">Sharepoint</a>
                <a href="/microsoft365" class="mobile-nav-link" data-page="microsoft365">Microsoft 365</a>
                <a href="#acronis" class="mobile-nav-link">Acronis</a>
                <a href="#testimonios" class="mobile-nav-link">Testimonios</a>
            </div>
        <div class="mobile-menu-buttons">
            <button class="btn btn-primary btn-mobile">Contactenos</button>
            <button class="btn btn-outline btn-mobile">Soporte</button>
        </div>
    </div>
</nav>

<style>
    /* Estilos específicos del componente que no están en global.css */
    
    /* Estado activo para enlaces de navegación */
    .nav-link-active {
        color: #FA4517 !important;
        font-weight: 600;
        position: relative;
    }
    
    .nav-link-active::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 100%;
        height: 2px;
        background: #FA4517;
        border-radius: 2px;
    }
    
    .mobile-nav-link-active {
        color: #FA4517 !important;
        font-weight: 600;
        border-bottom: 2px solid #FA4517 !important;
    }
    
    .nav-toggle {
        display: none;
        cursor: pointer;
        padding: 8px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .nav-toggle:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .hamburger {
        position: relative;
        width: 24px;
        height: 18px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .line {
        width: 100%;
        height: 2px;
        background: #ffffff;
        border-radius: 4px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        transform-origin: center;
    }

    /* Mobile Menu */
    .mobile-menu {
        display: none;
        background: #010738;
        padding: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .mobile-menu-links {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
        align-items: center;
    }

    .mobile-nav-link {
        color: #ffffff;
        text-decoration: none;
        font-weight: 500;
        font-size: 1.1rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        text-align: center;
        line-height: 1.2;
    }

    .mobile-nav-link:hover {
        color: #FA4517;
        padding-left: 1rem;
    }

    .mobile-menu-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
        justify-content: center;
    }

    .btn-mobile {
        width: 80%;
        max-width: 250px;
        padding: 1rem;
        font-size: 1rem;
        border-radius: 4px;
        text-align: center;
    }

    /* Responsive breakpoint for mobile */
    @media (max-width: 768px) {
        .nav-menu {
            display: none;
        }
        
        .nav-buttons {
            display: none;
        }
        
        .nav-toggle {
            display: flex;
        }
        
        .mobile-menu.active {
            display: block;
        }
    }

    /* Animación del menú hamburguesa moderna */
    .nav-toggle.active .line:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
    }

    .nav-toggle.active .line:nth-child(2) {
        opacity: 0;
        transform: scaleX(0);
    }

    .nav-toggle.active .line:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
    }

    /* Efecto de hover en las líneas */
    .nav-toggle:hover .line {
        background: #FA4517;
    }

    /* Animación suave al abrir/cerrar */
    .nav-toggle.active {
        background: rgba(250, 69, 23, 0.1);
    }
</style>

<script>
    // Funcionalidad del menú móvil y navegación activa
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuBtn = document.getElementById('mobile-menu');
        const mobileMenu = document.getElementById('mobile-menu-content');

        // Función para actualizar el estado activo de la navegación
        function updateActiveNavigation() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link, .mobile-nav-link');
            
            console.log('Current path:', currentPath); // Debug para Netlify
            
            navLinks.forEach(link => {
                const linkPath = link.getAttribute('href');
                const dataPage = link.getAttribute('data-page');
                
                console.log('Link:', linkPath, 'Data page:', dataPage); // Debug
                
                // Remover clases activas
                link.classList.remove('nav-link-active', 'mobile-nav-link-active');
                
                // Verificar si el enlace corresponde a la página actual
                let isActive = false;
                
                // Normalizar las rutas (remover barras finales)
                const normalizedCurrentPath = currentPath.replace(/\/$/, '');
                const normalizedLinkPath = linkPath ? linkPath.replace(/\/$/, '') : '';
                
                // Para la página de inicio
                if (dataPage === 'home' && (normalizedCurrentPath === '' || normalizedCurrentPath === '/')) {
                    isActive = true;
                }
                // Para la página nosotros
                else if (dataPage === 'nosotros' && normalizedCurrentPath === '/nosotros') {
                    isActive = true;
                }
                // Para la página microsoft365
                else if (dataPage === 'microsoft365' && normalizedCurrentPath === '/microsoft365') {
                    isActive = true;
                }
                // Para la página sharepoint
                else if (dataPage === 'sharepoint' && normalizedCurrentPath === '/sharepoint') {
                    isActive = true;
                }
                // Verificación adicional por href
                else if (normalizedLinkPath === normalizedCurrentPath) {
                    isActive = true;
                }
                
                if (isActive) {
                    console.log('Setting active for:', linkPath); // Debug
                    // Aplicar la clase correcta según el tipo de enlace
                    if (link.classList.contains('nav-link')) {
                        link.classList.add('nav-link-active');
                    } else if (link.classList.contains('mobile-nav-link')) {
                        link.classList.add('mobile-nav-link-active');
                    }
                }
            });
        }

        // Actualizar navegación al cargar la página
        updateActiveNavigation();

        // Actualizar navegación cuando cambia la URL (para navegación SPA)
        window.addEventListener('popstate', updateActiveNavigation);
        
        // Para Netlify: actualizar también cuando se completa la carga
        window.addEventListener('load', function() {
            setTimeout(updateActiveNavigation, 100);
        });
        
        // Para Netlify: actualizar cuando cambia la URL (navegación directa)
        if (window.location.pathname) {
            setTimeout(updateActiveNavigation, 200);
        }

        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', function() {
                mobileMenuBtn.classList.toggle('active');
                mobileMenu.classList.toggle('active');
            });

            // Cerrar menú al hacer clic en un enlace
            const mobileLinks = mobileMenu.querySelectorAll('a');
            mobileLinks.forEach(link => {
                link.addEventListener('click', function() {
                    if (mobileMenuBtn) {
                        mobileMenuBtn.classList.remove('active');
                    }
                    mobileMenu.classList.remove('active');
                    
                    // Actualizar navegación activa después de un pequeño delay
                    setTimeout(updateActiveNavigation, 100);
                });
            });
        }

        // Cerrar menú al hacer scroll
        window.addEventListener('scroll', function() {
            if (mobileMenu && mobileMenu.classList.contains('active') && mobileMenuBtn) {
                mobileMenuBtn.classList.remove('active');
                mobileMenu.classList.remove('active');
            }
        });
    });
</script> 