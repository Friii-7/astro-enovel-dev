---
// Componente contacto - Formulario de contacto con diseño moderno y responsive
import { initializeContactForm } from '../../scripts/contactForm.js';
---

<section class="contacto-section">
  <div class="contacto-container">
    <div class="contacto-content">
      <!-- Left side with text -->
      <div class="contacto-left">
        <h1 class="contacto-title">
          ¿Quieres empezar tu transformación digital?
        </h1>
        <p class="contacto-subtitle">
          Conecta con nosotros y descubre cómo podemos ayudarte a optimizar tu negocio con tecnología de vanguardia.
        </p>
      </div>

      <!-- Right side with contact form -->
      <div class="contacto-right">
        <div class="contacto-form-container">
          <form class="contacto-form">
            <div class="form-group">
              <label for="nombre" class="form-label">Nombre</label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                class="form-input"
                placeholder="Value"
                required
              />
            </div>

            <div class="form-group">
              <label for="apellido" class="form-label">Apellido</label>
              <input
                type="text"
                id="apellido"
                name="apellido"
                class="form-input"
                placeholder="Value"
                required
              />
            </div>

            <div class="form-group">
              <label for="correo" class="form-label">correo</label>
              <input
                type="email"
                id="correo"
                name="correo"
                class="form-input"
                placeholder="Value"
                required
              />
            </div>

            <div class="form-group">
              <label for="mensaje" class="form-label">Mensaje</label>
              <textarea
                id="mensaje"
                name="mensaje"
                class="form-textarea"
                placeholder="Value"
                rows="4"
                required></textarea>
            </div>

            <button type="submit" class="form-submit">
              <span>Enviar</span>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contacto-section {
    background: linear-gradient(rgba(1, 7, 56, 0.95), rgba(1, 7, 56, 0.9)),
      url(/images/enovelcontacto.webp);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    padding: 6rem 2rem;
    position: relative;
    max-width: 100vw;
    overflow-x: hidden;
    min-height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .contacto-container {
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .contacto-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    min-height: 70vh;
  }

  /* Left side styles */
  .contacto-left {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    padding-right: 2rem;
  }

  .contacto-title {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    line-height: 1.1;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    margin-bottom: 1.5rem;
    letter-spacing: -1px;
  }

  .contacto-subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  /* Right side styles */
  .contacto-right {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .contacto-form-container {
    background: white;
    padding: 2rem;
    border-radius: 4px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
    width: 100%;
    max-width: 500px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .contacto-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.95rem;
    font-weight: 600;
    color: #374151;
    margin-bottom: 0.25rem;
  }

  .form-input,
  .form-textarea {
    padding: 1rem 1.25rem;
    border: 2px solid #e5e7eb;
    border-radius: 4px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: white;
    font-family: inherit;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #FA4517;
    box-shadow: 0 0 0 4px rgba(249, 115, 22, 0.1);
    transform: translateY(-1px);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
    font-family: inherit;
  }

  .form-submit {
    background: #FA4517;
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  .form-submit:hover {
    background: #e03d15;
    transform: translateY(-1px);
  }

  .form-submit:active {
    transform: translateY(0);
  }

  /* Responsive Design - Siguiendo el patrón del proyecto */
  @media screen and (max-width: 768px) {
    .contacto-section {
      padding: 6rem 1rem 4rem 1rem;
      margin-top: 51px;
    }

    .contacto-container {
      padding: 0 1rem;
    }

    .contacto-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .contacto-right {
      order: -1;
      padding: 1rem;
    }

    .contacto-left {
      padding-right: 0;
      align-items: center;
      min-height: auto;
    }

    .contacto-title {
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }

    .contacto-subtitle {
      font-size: 1rem;
    }

    .contacto-form-container {
      padding: 2rem;
      max-width: 600px;
    }

    .contacto-form {
      text-align: left;
    }

    .form-row {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .form-input,
    .form-textarea {
      padding: 0.875rem 1rem;
      border-radius: 4px;
    }

    .form-submit {
      padding: 1rem 1.5rem;
      font-size: 1rem;
    }
  }

  @media screen and (max-width: 480px) {
    .contacto-section {
      padding: 5rem 0.5rem 3rem 0.5rem;
      margin-top: 51px;
    }

    .contacto-container {
      padding: 0 0.5rem;
    }

    .contacto-content {
      gap: 2rem;
    }

    .contacto-title {
      font-size: 1.8rem;
      margin-bottom: 1rem;
    }

    .contacto-subtitle {
      font-size: 0.95rem;
    }

    .contacto-form-container {
      padding: 1.5rem;
      border-radius: 4px;
    }

    .contacto-form {
      gap: 1rem;
      text-align: left;
    }

    .form-input,
    .form-textarea {
      padding: 0.75rem 0.875rem;
      font-size: 0.95rem;
    }

    .form-textarea {
      min-height: 100px;
    }

    .form-submit {
      padding: 0.875rem 1.25rem;
      font-size: 0.95rem;
      gap: 0.5rem;
    }

    .submit-icon {
      width: 18px;
      height: 18px;
    }
  }
</style>

<script>
  // Initialize contact form functionality
  document.addEventListener('DOMContentLoaded', function() {
    import('../../scripts/contactForm.js').then(module => {
      module.initializeContactForm();
    }).catch(error => {
      console.error('Error loading contact form script:', error);
    });
  });
</script>
