---
// Componente de navegación
---

<nav class="navbar">
    <div class="nav-container">
        <!-- Logo -->
        <div class="nav-logo">
            <a href="/" title="Enovel - Transformación Digital con IA y Microsoft 365">
                <img src="/images/02-logo-enovel-15.png" alt="Enovel Logo" class="logo-image">
            </a>
        </div>

        <!-- Desktop Navigation Links -->
        <div class="nav-menu">
            <button class="btn-ch btn-chatgpt nav-btn">Al enovel</button>
            <a href="/nosotros" class="nav-link">Nosotros</a>
            <a href="#microsoft365" class="nav-link">Microsoft 365</a>
            <a href="#acronis" class="nav-link">Acronis</a>
            <a href="#testimonios" class="nav-link">Testimonios</a>
        </div>

        <!-- Desktop Buttons -->
        <div class="nav-buttons">
            <button class="btn btn-primary">Contactenos</button>
            <button class="btn btn-outline">Soporte</button>
        </div>

        <!-- Mobile Menu Button -->
        <div class="nav-toggle" id="mobile-menu">
            <div class="hamburger">
                <span class="line"></span>
                <span class="line"></span>
                <span class="line"></span>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div class="mobile-menu" id="mobile-menu-content">
        <div class="mobile-menu-links">
            <button class="btn btn-chatgpt btn-mobile nav-btn-mobile">Al enovel</button>
            <a href="/nosotros" class="mobile-nav-link">Nosotros</a>
            <a href="#microsoft365" class="mobile-nav-link">Microsoft 365</a>
            <a href="#acronis" class="mobile-nav-link">Acronis</a>
            <a href="#testimonios" class="mobile-nav-link">Testimonios</a>
        </div>
        <div class="mobile-menu-buttons">
            <button class="btn btn-primary btn-mobile">Contactenos</button>
            <button class="btn btn-outline btn-mobile">Soporte</button>
        </div>
    </div>
</nav>

<style>
    /* Estilos específicos del componente que no están en global.css */
    .nav-toggle {
        display: none;
        cursor: pointer;
        padding: 8px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .nav-toggle:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .hamburger {
        position: relative;
        width: 24px;
        height: 18px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .line {
        width: 100%;
        height: 2px;
        background: #ffffff;
        border-radius: 4px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        transform-origin: center;
    }

    /* Mobile Menu */
    .mobile-menu {
        display: none;
        background: #010738;
        padding: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .mobile-menu-links {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
        align-items: center;
    }

    .mobile-nav-link {
        color: #ffffff;
        text-decoration: none;
        font-weight: 500;
        font-size: 1.1rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        text-align: center;
        line-height: 1.2;
    }

    .mobile-nav-link:hover {
        color: #FA4517;
        padding-left: 1rem;
    }

    .mobile-menu-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
        justify-content: center;
    }

    .btn-mobile {
        width: 80%;
        max-width: 250px;
        padding: 1rem;
        font-size: 1rem;
        border-radius: 4px;
        text-align: center;
    }

    /* Responsive breakpoint for mobile */
    @media (max-width: 768px) {
        .nav-menu {
            display: none;
        }
        
        .nav-buttons {
            display: none;
        }
        
        .nav-toggle {
            display: flex;
        }
        
        .mobile-menu.active {
            display: block;
        }
    }

    /* Animación del menú hamburguesa moderna */
    .nav-toggle.active .line:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
    }

    .nav-toggle.active .line:nth-child(2) {
        opacity: 0;
        transform: scaleX(0);
    }

    .nav-toggle.active .line:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
    }

    /* Efecto de hover en las líneas */
    .nav-toggle:hover .line {
        background: #FA4517;
    }

    /* Animación suave al abrir/cerrar */
    .nav-toggle.active {
        background: rgba(250, 69, 23, 0.1);
    }
</style>

<script>
    // Funcionalidad del menú móvil
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuBtn = document.getElementById('mobile-menu');
        const mobileMenu = document.getElementById('mobile-menu-content');

        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', function() {
                mobileMenuBtn.classList.toggle('active');
                mobileMenu.classList.toggle('active');
            });

            // Cerrar menú al hacer clic en un enlace
            const mobileLinks = mobileMenu.querySelectorAll('a');
            mobileLinks.forEach(link => {
                link.addEventListener('click', function() {
                    if (mobileMenuBtn) {
                        mobileMenuBtn.classList.remove('active');
                    }
                    mobileMenu.classList.remove('active');
                });
            });
        }

        // Cerrar menú al hacer scroll
        window.addEventListener('scroll', function() {
            if (mobileMenu && mobileMenu.classList.contains('active') && mobileMenuBtn) {
                mobileMenuBtn.classList.remove('active');
                mobileMenu.classList.remove('active');
            }
        });
    });
</script> 