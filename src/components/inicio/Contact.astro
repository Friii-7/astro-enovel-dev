---
// Componente Contact - Sección de contacto
---

<section class="contact-section">
    <div class="contact-container">
        <div class="contact-content">
            <h2 class="contact-title">¿Quieres empezar tu transformación digital?</h2>
        </div>
        <div class="contact-form-container">
            <form class="contact-form" id="contactForm">
                <div class="form-group">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" id="nombre" name="nombre" class="form-input" placeholder="Tu nombre" required>
                </div>
                <div class="form-group">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" id="apellido" name="apellido" class="form-input" placeholder="Tu apellido" required>
                </div>
                <div class="form-group">
                    <label for="correo" class="form-label">Correo</label>
                    <input type="email" id="correo" name="correo" class="form-input" placeholder="tu@email.com" required>
                </div>
                <div class="form-group">
                    <label for="mensaje" class="form-label">Mensaje</label>
                    <textarea id="mensaje" name="mensaje" class="form-textarea" placeholder="Cuéntanos sobre tu proyecto" rows="4" required></textarea>
                </div>
                <button type="submit" class="contact-btn">Enviar</button>
            </form>
        </div>
    </div>
</section>

<style>
    /* Contact Section Styles */
    .contact-section {
        background: linear-gradient(rgba(1, 7, 56, 0.8), rgba(1, 7, 56, 0.8)), url(/images/enovelcontacto.png);
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        padding: 4rem 2rem;
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        overflow: hidden;
        max-width: 100vw;
    }

    .contact-container {
        position: relative;
        z-index: 2;
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        min-height: 100vh;
    }

    .contact-content {
        color: #ffffff;
        padding-right: 2rem;
        max-width: 600px;
    }

    .contact-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        line-height: 1.2;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        max-width: 100%;
    }

    .contact-form-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 4px;
        padding: 3rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        max-width: 500px;
        width: 100%;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        max-width: 100%;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        max-width: 100%;
    }

    .form-label {
        font-weight: 600;
        color: #010738;
        font-size: 0.95rem;
        max-width: 100%;
    }

    .form-input,
    .form-textarea {
        padding: 1rem;
        border: 2px solid #e1e5e9;
        border-radius: 4px;
        font-size: 1rem;
        font-family: 'Inter', sans-serif;
        transition: all 0.3s ease;
        background: #ffffff;
        max-width: 100%;
        width: 100%;
    }

    .form-input:focus,
    .form-textarea:focus {
        outline: none;
        border-color: #FA4517;
        box-shadow: 0 0 0 3px rgba(250, 69, 23, 0.1);
    }

    .form-textarea {
        resize: vertical;
        min-height: 120px;
    }

    .contact-btn {
        margin-top: 1rem;
        padding: 0.50rem 13rem;
        font-size: 1.1rem;
        font-weight: 600;
        width: 100%;
        border-radius: 4px;
        background: #FA4517;
        color: #ffffff;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(250, 69, 23, 0.3);
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .contact-btn:hover {
        background: #e03d15;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(250, 69, 23, 0.4);
    }

    /* ===== Contact Section Responsive ===== */

    /* Mobile / Tablet */
    @media screen and (max-width: 768px) {
        .contact-container {
            grid-template-columns: 1fr;
            gap: 2rem;
            padding: 2rem 1rem;
        }
        .contact-content {
            padding-right: 0;
            text-align: center;
        }
        .contact-title {
            font-size: 2rem;
        }
        .contact-form-container {
            padding: 2rem;
        }
        .contact-btn {
            padding: 1rem 2rem;
            font-size: 1.1rem;
            width: 100%;
            margin: 0 auto;
            display: block;
        }
    }

    /* Small Mobile */
    @media screen and (max-width: 480px) {
        .contact-section {
            min-height: auto;
            padding: 2rem 0;
        }
        .contact-container {
            padding: 1rem;
        }
        .contact-title {
            font-size: 1.8rem;
        }
        .form-input,
        .form-textarea {
            padding: 0.75rem;
        }
        .contact-btn {
            padding: 0.75rem 2rem;
            font-size: 1rem;
        }
    }

    /* iPad Portrait */
    @media screen and (min-width: 768px) and (max-width: 1024px) {
        .contact-btn {
            padding: 1rem 3rem;
            font-size: 1.1rem;
            max-width: 300px;
            margin: 0 auto;
            display: block;
        }
    }

    /* iPad Landscape */
    @media screen and (min-width: 1024px) and (max-width: 1366px) and (orientation: landscape) {
        .contact-btn {
            padding: 1rem 4rem;
            font-size: 1.1rem;
            max-width: 350px;
            margin: 0 auto;
            display: block;
        }
    }
</style>

<script>
    // Funcionalidad del formulario
    document.addEventListener('DOMContentLoaded', function() {
        const contactForm = document.getElementById('contactForm') as HTMLFormElement;
        
        if (contactForm) {
            contactForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Obtener los datos del formulario
                const formData = new FormData(contactForm);
                const data = Object.fromEntries(formData);
                
                // Aquí puedes agregar la lógica para enviar los datos
                console.log('Datos del formulario:', data);
                
                // Mostrar mensaje de éxito (puedes personalizar esto)
                alert('¡Gracias por tu mensaje! Nos pondremos en contacto contigo pronto.');
                
                // Limpiar el formulario
                contactForm.reset();
            });
        }
    });
</script> 